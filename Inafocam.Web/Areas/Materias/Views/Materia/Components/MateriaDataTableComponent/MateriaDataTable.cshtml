@using Inafocam.core.Modelos
@using System.Globalization;
@model Inafocam.Web.Areas.Materias.Models.IndexViewModel

<table id="page-length-option" class="display">


    <thead>
        <tr>

            <th> ID</th>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Creditos</th>
            <th>Profesor Asignado</th>
            <th>Periodo</th>
            <th>Acciones</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SubjectMatterList)
        {
            <tr>
                <td>@item?.SubjectMatterId</td>
                <td>@item?.SubjectMatterCode</td>
                <td>@item?.SubjectMatterName</td>
                <td>@item?.Creditos</td>
                <td>@item?.AssignedTeacher?.Contact?.ContactName</td>
                <td>@item?.period</td>

                <td>
                    <a asp-area="Materias" asp-controller="Materia" asp-action="Editar" asp-route-id="@item.SubjectMatterId" asp-route-scholarshipProgramUniversityId="@item.ScholarshipProgramUniversityId"class="tooltipped" data-position="top" data-tooltip="Editar">
                        <i class="material-icons">edit</i>
                    </a>
                                    
                </td>
            </tr>
        }




    </tbody>
    <tfoot>
        <tr>

            <th> ID</th>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Creditos</th>
            <th>Profesor Asignado</th>
            <th>Periodo</th>
            <th>Acciones</th>

        </tr>
    </tfoot>
</table>

<div class="modal mt-4" id="formulariopassword"></div>

<div class="row ">
    <div class="col s5 center ml-10 mt-5 modal " id="formularioestado">

    </div>
</div>
