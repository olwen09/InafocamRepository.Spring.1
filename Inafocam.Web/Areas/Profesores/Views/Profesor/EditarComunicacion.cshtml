<div class="row">
    <form class="col s12 formValidate" method="post" asp-area="Profesores" asp-controller="Profesor" asp-action="AgregarComunicacion">
        <input type="hidden" asp-for="TeacherId" />
        <input type="hidden" asp-for="ContactId" />
        <input type="hidden" asp-for="StatusId" />


      <input type="hidden" asp-for="ContactCommunicationId" />
      <input type="hidden" asp-for="Communication.CommunicationId" />
      <input type="hidden" asp-for="Communication.StatusId" />
         




        @*@{ var prueba = Model.HigherTeacherEducation.TeacherId; }*@




        <div class="card">
            <div class="card-content">


                <h4 class="card-title">Datos de Comunicación</h4>

                <h5 class="center">@Model?.TeacherFullName</h5>









                <div class="input-field col s12 m6 l6">
                    <input asp-for="Communication.CommunicationPhoneNumber1" id="celular1" type="tel" class="validate" required>
                    <label for="celular1">Celular 1</label>
                    <span class="red-text validationDisplay"></span>
                </div>

                <div class="input-field col s12 m6 l6">
                    <input asp-for="Communication.CommunicationPhoneNumber2" id="celular2" type="tel" class="validate" required>
                    <label for="celular2">Celular 2</label>
                    <span class="red-text validationDisplay"></span>
                </div>

                <div class="input-field col s12 m6 l6">
                    <input asp-for="Communication.CommunicationEmail" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="red-text validationDisplay"></span>
                </div>

                <div class="input-field col s12 m6 l6">
                    <input asp-for="ContactCommunicationComment" id="contactComment" type="text" class="validate" required>
                    <label for="contactComment">Comentario</label>
                    <span class="red-text validationDisplay"></span>
                </div>





               



            </div>

        </div>

        <div class="input-field col s12">

            <button class="teal btn waves-effect waves-light" type="submit">
                <i class="material-icons left">save</i>
                Guardar
            </button>


            <a class="btn waves-effect waves-light" asp-area="Profesores" asp-controller="Profesor" asp-action="Index">
                <i class="material-icons left"></i>
                Ir ala lista
            </a>
            @*<a class="red btn waves-effect waves-light">
                    <i class="material-icons left">cancel</i>
                    Anular
                </a>

                <a class="white btn waves-effect waves-light black-text">
                    <i class="material-icons left">cleaning_services</i>
                    Limpiar
                </a>*@

        </div>






    </form>




</div>

