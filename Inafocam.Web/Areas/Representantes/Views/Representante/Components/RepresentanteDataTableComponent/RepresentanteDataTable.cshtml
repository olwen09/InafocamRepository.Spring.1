@using Inafocam.core.Modelos
@using System.Globalization;

<table id="page-length-option" class="display">


    <thead>
        <tr>

            <th>Representante ID</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Fecha de Creacion</th>
            <th>Estado</th>
            <th>Acciones</th>


        </tr>
    </thead>
    <tbody>
        @foreach (Agent item in Model)
        {
            <tr>
                <td>@item?.AgentId</td>
                <td>@item?.Contact?.ContactName</td>
                <td>@item?.AgentType?.AgentTypeName</td>
                <td>@item?.CreationDate?.ToString("D", CultureInfo.GetCultureInfo("es"))</td>
                <td>@item?.Status?.StatusName</td>
                
               <td>
                    <a asp-area="Representantes"  asp-controller="Representante" asp-action="Editar" asp-route-id="@item?.AgentId" class="tooltipped" data-position="top" data-tooltip="Editar">
                        <i class="material-icons">edit</i>
                    </a>
               </td>
            </tr>
        }




    </tbody>
    <tfoot>
        <tr>

            <th>Representante ID</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Fecha de Creacion</th>
            <th>Estado</th>
            <th>Acciones</th>

        </tr>
    </tfoot>
</table>

<div class="modal mt-4" id="formulariopassword"></div>

<div class="row ">
    <div class="col s5 center ml-10 mt-5 modal " id="formularioestado">

    </div>
</div>
