    <script>





        $(document).ready(function() {
            $('.tooltipped').tooltip();

        });

        if ("@mensaje.Tipo".length > 0) {
            $.confirm({
                title: '@mensaje.Titulo',
                content: '@mensaje.Texto',
                type: '@mensaje.Tipo',
                typeAnimated: true,
                boxWidth: '500px',
                autoClose: 'cerrar|9000',
                useBootstrap: false,
                buttons: {
                    cerrar:{
                        text: "Cerrar",
                        action: function () { }
                    }
                },
                onClose: function () {
                    // before the modal is hidden.
                    $.ajax({
                        type: 'get',
                        url: '/home/ClearTempData',
                        success: function() {

                        }
                    });
                }
            });

        }


        function eliminar(url) {
            $.confirm({
                title: 'Eliminar informe',
                content: 'Esta seguro de eliminar este informe?',
                type: 'red',
                boxWidth: '500px',
                useBootstrap: false,
                typeAnimated: true,
                buttons: {
                    eliminar: {
                        text: 'Eliminar',
                        btnClass: 'btn-red',
                        action: function () {
                            $.ajax({
                                type: 'post',
                                url: url,
                                success: function (data) {

                                    if (data === 1 || data === "1") {
                                        $.confirm({
                                            title: 'Eliminado',
                                            content: 'El informe fue eliminado',
                                            type: 'green',
                                            typeAnimated: true,
                                            boxWidth: '500px',
                                            autoClose: 'cerrar|5000',
                                            useBootstrap: false,
                                            buttons: {
                                                cerrar: {
                                                text: "Cerrar",
                                                action: function () { }
                                            }
                                            },
                                            onClose: function () {

                                                // before the modal is hidden.
                                                var container = $("#page-length-option");
                                                $.ajax({
                                                    type: 'get',
                                                    url: '/SeguimientoDeUniversidades/seguimientodeuniversida/Informes?tracingId=@Model.TracingId&programUniversityId=@Model.ScholarshipProgramUniversityId',
                                                    success: function () {
                                                        $.get('/SeguimientoDeUniversidades/seguimientodeuniversida/Informes?tracingId=@Model.TracingId&programUniversityId=@Model.ScholarshipProgramUniversityId', function (data) {
                                                            //console.log(data);
                                                            container.html(data);
                                                            location.reload();
                                                            //dtable.ajax.reload();
                                                            //console.log("recargó");

                                                        });
                                                        $.ajax({
                                                            type: 'get',
                                                            url: '/home/ClearTempData',
                                                            success: function() {

                                                            }
                                                        });
                                                    }
                                                });

                                            }
                                        });
                                    } else {
                                        $.confirm({
                                            title: 'Hubo un error',
                                            content: 'No se pudo procesar la solicitud',
                                            type: 'orange',
                                            typeAnimated: true,
                                            boxWidth: '500px',
                                            autoClose: 'cerrar|5000',
                                            useBootstrap: false,
                                            buttons: {
                                                cerrar: {
                                                text: "Cerrar",
                                                action: function () { }
                                            }
                                            },
                                            onClose: function () {
                                                // before the modal is hidden.
                                                $.ajax({
                                                    type: 'get',
                                                    url: '/home/ClearTempData',
                                                    success: function() {

                                                    }
                                                });
                                            }
                                        });
                                    }

                                }
                            });
                        }
                    },
                    cerrar:{
                        text: "Cerrar",
                        action: function () { }
                    }
                }
            });
        }

    </script>

