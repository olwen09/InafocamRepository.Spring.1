<div class="row">
    <form class="col s12 formValidate" method="post" asp-area="InstitucionFomadora" asp-controller="InstitucionFomadora" asp-action="GuardarUniverity">

        @*<input type="hidden" asp-for="UniversityId" />
        <input type="hidden" asp-for="CreationDate" />*@

        @*<input type="hidden" asp-for="Com" />*@

        @* Detalles del programa*@
        <div>
            <span asp-validation-sumary=""></span>
        </div>

        <div class="card">
            <div class="card-content">



                <h4 class="card-title">Actividades Co-Curriculares</h4>


                <div class="row ">


                    <div class="input-field col s12 m6 l4">


                        @*<i class="material-icons prefix">contacts</i>*@

                        <input id="CourseName" asp-for="TracingCourseModel.CourseName" type="text" class="validat">

                        <label for="CourseName">Nombre del Curso</label>
                    </div>

                    <div class="input-field col s12 m6 l4">
                        <input asp-for="TracingCourseModel.HoursTaken" id="HoursTaken" type="text" class="validat">

                        <label for="HoursTaken">Duración en Horas</label>

                    </div>

                    <div class="input-field col s12 m6 l4">

                        <input asp-for="TracingCourseModel.StudentsQuantity" id="UniversityCampus" type="text" class="validat">

                        <label for="UniversityCampus">Cantidad de Participantes</label>


                    </div>

                    <div class="input-field col s12 m6 l4">

                        <input asp-for="TracingCourseModel.CourseStartDate" id="CourseStartDate" type="text" class="validat datepicker">

                        <label for="CourseStartDate">Fecha en que fue Impartido</label>


                    </div>

                    <div class="input-field col s12 m6 l4">

                        <input asp-for="TracingCourseModel.CourseEndDate" id="CourseEndDate" type="text" class="validat datepicker">

                        <label for="CourseEndDate"></label>


                    </div>






                    <div class="input-field col s12 m6 l1">
                        <br />
                        <button class="teal btn-small waves-effect waves-light tooltipped" data-position="top" data-tooltip="Agregar"><i class="material-icons">arrow_forward</i></button>



                    </div>

                </div>
                <br />
                <span class="card-title">Cursos Agregados</span>
                <div class="divider"></div>
                <table>
                    <thead>
                        <tr>
                            @*<th>Numero</th>*@
                            <th>Nombre del Curso</th>
                            <th>Duracion en Horas</th>
                            <th>Fecha en que fue impartido</th>
                            <th>Participantes</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.TracingCourseList)
                        {
                            <tr>
                                @*<td>@item.Id</td>*@
                                <td>@item.CourseName</td>
                                <td>@item.HoursTaken</td>
                                <td>@item.CourseStartDate - @item.CourseEndDate</td>
                                <td>@item.StudentsQuantity</td>
                                <td>
                                    <a class="tooltipped red-text" data-position="top" data-tooltip="Remover" href="#">
                                        <i class="material-icons">delete</i>
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>


            </div>
            @*<div class="input-field col s12">
                <button class="teal btn waves-effect waves-light" type="submit" onclick="onValidate(this.parent)">
                    Guardar
                    <i class="material-icons right">save</i>
                </button>
            </div>*@
        </div>

        <div class="card">
            <div class="card-content">



                <h4 class="card-title">A continuación solo seleccione los documentos que desea anexar o sustiturir!</h4>


                <div class="row ">



                    <div class="input-field col s12 m6 l6">

                        <div class="row">
                            <label for="select2User" class="col s12">Tipo de Documento</label>
                        </div>
                        <select asp-for="TracingCourseFileTypeModel.Id" class="form-control js-example-basic-single" style="width: 100%" asp-items="ViewBag.DocumentTypes">
                            <option value="" disabled selected>Seleccione una Opción</option>
                        </select>

                    </div>


                    <div class="file-field input-field col s12 m6 l5">
                        <div class="btn">
                            <span>File</span>
                            <input name="file" type="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input name="file" class="file-path validate" type="text">
                        </div>
                    </div>

                    <div class="input-field col s12 m6 l1">
                        <br />
                        <button class="teal btn-small waves-effect waves-light tooltipped" data-position="top" data-tooltip="Agregar"><i class="material-icons">arrow_forward</i></button>



                    </div>

                </div>
                <br />
                <span class="card-title">Documentos Anexos</span>
                <div class="divider"></div>
                <table>
                    <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Tipo de Documento</th>
                           <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.TracingCourseFileList)
                        {
                            var numero = count++;
                            <tr>
                              
                                <td>@numero</td>
                                <td>@item.FileType.FileTypeName</td>
                                <td><a href="\app-assets\documentos\teacher\@item?.File?.FilePath" target="_blank">Ver</a></td>
                            </tr>
                        }





                    </tbody>
                </table>


            </div>
            @*<div class="input-field col s12">
                <button class="teal btn waves-effect waves-light" type="submit" onclick="onValidate(this.parent)">
                    Guardar
                    <i class="material-icons right">save</i>
                </button>
            </div>*@
        </div>

        <div class="input-field col s12">





            <a class="red btn waves-effect waves-light" asp-area="SeguimientoDeUniversidades" asp-controller="SeguimientoDeUniversida" asp-action="DesarrolloDelPlanDeEstudio"  asp-route-tracingId="@Model.TracingId" asp-route-scholarshipProgramUniversityId="@Model.ScholarshipProgramUniversityId">

                Atras
            </a>

            <a class="teal btn waves-effect waves-light" asp-area="SeguimientoDeUniversidades" asp-controller="SeguimientoDeUniversida" asp-action="DocumentoParaElSistemaDeCalidad" asp-route-tracingId="@Model.TracingId" asp-route-scholarshipProgramUniversityId="@Model.ScholarshipProgramUniversityId">

                Siguiente
            </a>

        </div>

    </form>
</div>

