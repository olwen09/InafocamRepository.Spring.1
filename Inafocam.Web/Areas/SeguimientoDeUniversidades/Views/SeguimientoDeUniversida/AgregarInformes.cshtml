<div class="row">
    <form class="col s12 formValidate" enctype="multipart/form-data" method="post" asp-area="SeguimientoDeUniversidades" 
          asp-controller="SeguimientoDeUniversida" asp-action="GuadrdarInforme">


     
     <input type="hidden" asp-for="TracingId" />
     <input type="hidden" asp-for="ScholarshipProgramUniversityId" />
     <input type="hidden" asp-for="CreatorUserId" />
     <input type="hidden" asp-for="CreationDate" />
     <input type="hidden" asp-for="CreatorName " />
     <input type="hidden" asp-for="Program" />
         



        <div>
            <span asp-validation-sumary=""></span>
        </div>

   




        <div class="card">
            <div class="card-content">

                <h4 class="card-title">Agregar Informe</h4>

                <div class="row">
                    <div class=" input-field col s12 m6 l3">
                        <input asp-for="CreatorName" id="CreatorName" type="text" class="validat black-text" disabled>
                        <label for="CreatorName">Creador</label>
                    </div>


                    <div class=" input-field col s12 m6 l3">
                        <input asp-for="Program" id="Programa" type="text" class="validat black-text" disabled>
                        <label for="Programa">Programa</label>
                    </div> 
                    
                    <div class=" input-field col s12 m6 l4">
                        <input asp-for="UniversityName" id="Programa" type="text" class="validat black-text" disabled>
                        <label for="Programa">Universidad</label>
                    </div>


                    @{

                        var date = Model.CreationDate.ToString("D", CultureInfo.GetCultureInfo("es"));
                    }
                    <div class="input-field col s12 m6 l2">
                        <input asp-for="@date" id="date" type="text" class="validat black-text" disabled>
                        <label  for="date">Fecha</label>
                    </div>
                </div>


                <div class="file-field input-field col s12 m6 l6">
                    <div class="btn">
                        <span>File</span>
                        <input name="file" type="file">
                    </div>
                    <div class="file-path-wrapper">
                        <input name="file" class="file-path validate" type="text">
                    </div>
                </div>


                <div class="input-field col s12 m6 l6">

                    <textarea asp-for="Comment" id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Comentario</label>

                </div>


            </div>

        </div>

        <div class="input-field col s12">

            <button class="teal btn waves-effect waves-light" type="submit">
                <i class="material-icons left">save</i>
                Guardar
            </button>



            <a class="btn waves-effect waves-light"  asp-area="SeguimientoDeUniversidades" asp-controller="SeguimientoDeUniversida" asp-action="Informes">
                <i class="material-icons left"></i>
                Ir a la lista
            </a>

            @*<a class="white btn waves-effect waves-light black-text">
                    <i class="material-icons left">cleaning_services</i>
                    Limpiar
                </a>*@

        </div>






    </form>




</div>

