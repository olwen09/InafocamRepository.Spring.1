@using Inafocam.core.Modelos
@using System.Globalization;

<table id="page-length-option" class="display">


    <thead>
        <tr>

            <th class="center"> Id </th>
            <th>Código de SCAT</th>
            <th>Número de contrato</th>
            <th>Programa</th>
            <th>Universidad</th>
            <th>Periodo de convocatoria</th>
            <th>Periodo para el programa</th>
            <th>Nivel</th>
            <th>Estado</th>
            <th>Acciones</th>


        </tr>
    </thead>
    <tbody>
        @foreach (ScholarshipProgramUniversity item in Model)
        {
        <tr>
            <td>@item?.ScholarshipProgramUniversityId</td>
            <td>@item?.ScatProgramCode</td>
            <td>@item?.ContractNumber</td>
            <td>@item?.ScholarshipProgram?.ScholarshipProgramName</td>
            <td>@item?.University?.UniversityName</td>
            <td>@item.AnnouncementStartDate?.ToString("D", CultureInfo.GetCultureInfo("es")) - @item.AnnouncementEndDate?.ToString("D", CultureInfo.GetCultureInfo("es"))</td>
            <td>@item.StartDate?.ToString("D", CultureInfo.GetCultureInfo("es")) - @item?.EndDate?.ToString("D", CultureInfo.GetCultureInfo("es"))</td>
            <td>@item.ScholarshipLevel?.ScholarshipLevelName</td>
            <td>@item.Status?.StatusName</td>
            
            <td>
                <a asp-area="ConvocatoriaDeBecas" asp-controller="ConvocatoriaDeBeca" asp-action="Editar" asp-route-id="@item.ScholarshipProgramUniversityId" class="tooltipped" data-position="top" data-tooltip="Editar">
                    <i class="material-icons">edit</i>
                </a> 
                
               
            </td>
        </tr>
        }
       



    </tbody>
    <tfoot>
        <tr>

            <th class="center"> Id </th>
            <th>Código de SCAT</th>
            <th>Número de contrato</th>
            <th>Programa</th>
            <th>Universidad</th>
            <th>Periodo de Convocatoria</th>
            <th>Periodo para el Programa</th>
            <th>Nivel</th>
            <th>Estado</th>
            <th>Acciones</th>

        </tr>
    </tfoot>
</table>

<div class="modal mt-4" id="formulariopassword"></div>

<div class="row ">
    <div class="col s5 center ml-10 mt-5 modal " id="formularioestado">

    </div>
</div>
